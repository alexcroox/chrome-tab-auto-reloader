{
  "manifest_version": 2,
  "name": "Chrome Tab Auto Reloader",
  "description": "Auto reload a tab every 30 seconds to keep your session alive while you are AFK",
  "version": "0.1",
  "homepage_url": "http://alexcrooks.me",
  "permissions": ["tabs"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
